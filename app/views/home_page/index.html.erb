<div class="container" ng-app="urlShortener">
  <div class="jumbotron">
    <h1>URL Shortener</h1>
  </div>
  <div ng-controller="shortenerCtrl">
  	<div class="row">
  	  <div class="col-md-8">
  	  	<form class="form-inline" ng-submit="addUrl()">
          <div class="form-group">
            <input type="text" class="form-control" name="url" placeholder="Add URL" ng-model="webAddress.url" />
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
  	  </div>	
  	</div>
  </div>	
</div>