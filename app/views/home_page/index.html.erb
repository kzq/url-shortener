<div class="container" ng-app="urlShortener">
  <div class="jumbotron">
    <h1>URL Shortener</h1>
  </div>
  <div ng-controller="shortenerCtrl">
  	<div class="row">
  	  <div class="col-md-8">
  	  	<form class="form-inline" name="addUrlForm" ng-submit="addUrl()">
          <div class="form-group">
            <input type="text" class="form-control" id="url" placeholder="Add URL with http://" ng-model="webAddress.url" required/>
          </div>
          <button type="submit" id="addUrl" class="btn btn-primary" ng-disabled="addUrlForm.$invalid">Add</button>
        </form>
  	  </div>	
  	</div>
  	<div class="row"></div>
  	<div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="col-md-3">URL</th>
              <th class="col-md-2">Short URL</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="webAddress in webAddresses">
              <td>{{webAddress.url}}</td>
              <td><a ng-href="{{webAddress.short_url}}">{{webAddress.short_url}}</a></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>	
</div>